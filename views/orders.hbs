<h1>Заказы</h1>

{{#if orders.length}}
  {{#each orders}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              Заказ № <small>{{number}}</small>
            </span>
            <p class="date">{{date}}</p>
            <p><em>{{buyerName}}</em> ({{buyerPhone}})</p>

            <ol>
              {{#each cart}}
                <li>
                  {{id.name}} (x<strong>{{count}}</strong>)
                </li>
              {{/each}}
            </ol>
            <hr>
            <p>Цена: <span class="price">{{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Нет заказов =(</p>
{{/if}}